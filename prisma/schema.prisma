// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// A project can have many breakdowns
// A breakdown can have one project
// A breakdown can have many elements
// An element can have one breakdown
// An element can have many elements as children
// An element can have one parent element

model Project {
  id          String      @id @default(uuid())
  projectName String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  deletedAt   DateTime?
  breakdowns  Breakdown[]
}

model Breakdown {
  id            String    @id @default(uuid())
  breakdownName String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  deletedAt     DateTime?
  projectId     String
  project       Project   @relation(fields: [projectId], references: [id])
  elements      Element[]
  autoLayout    Boolean?
  data          String?
}

model Element {
  id              String    @id @default(uuid())
  elementName     String
  top             Boolean?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  deletedAt       DateTime?
  breakdownId     String
  breakdown       Breakdown @relation(fields: [breakdownId], references: [id])
  parentElement   Element?  @relation("ElementToElement", fields: [parentElementId], references: [id])
  parentElementId String?
  children        Element[] @relation("ElementToElement")
  nodeType        String?
  nodeLabel       String
  nodeXpos        Float?
  nodeYpos        Float?
  nodeExtent      String?
  level           Int?
}
